package com.techment;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.techment.dao.IAutherDao;
import com.techment.dao.IBookDao;
import com.techment.entity.Auther;
import com.techment.entity.Book;

@SpringBootApplication
public class AssignmentHibernateApplication implements CommandLineRunner {

	@Autowired
	IAutherDao iAutherDao;
	
	@Autowired
	IBookDao iBookDao;
	
	
	public static void main(String[] args)  {
		SpringApplication.run(AssignmentHibernateApplication.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		// TODO Auto-generated method stub
		
		
		iBookDao.save(new Book("java",500,null));
		iBookDao.save(new Book("C",500,null));
		iBookDao.save(new Book("C++",700,null));
		iBookDao.save(new Book("HTML",800,null));
		iBookDao.save(new Book("JS",900,null));
		
		System.out.println("inserted");
		
		
		
		Auther auther1 = new Auther();
		
		auther1.setFisrtName("E");
		auther1.setMiddleName("Balaguru");
		auther1.setLastName("Swami");
		auther1.setPhoneNo("9522222892");
		
		
		iAutherDao.save(auther1);
		
		
		
//		Auther auther1 = new Auther("E", "Balaguru", "Swami", "9522222", books);
		
		
	}

}
